<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:padding="16dp">

    <!-- First LinearLayout with scrollable product list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Product -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/berger_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/bergerjpg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/berger_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Berger Paint"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/berger_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10,000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/berger_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 2"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/berger_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Crimson Red "
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/berger_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Second Product -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/brush_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/brush_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/brush_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paint Brush"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/brush_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2,000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/brush_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 5"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/brush_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="7 inch brush "
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/brush_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Third Product -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/fevicol_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fevicol_glue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fevicol_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fevicol Glue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fevicol_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5,000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/fevicol_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/fevicol_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="50gm Glue"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/fevicol_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/asian_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/asian_paint" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/asian_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Asian Paint"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/asian_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20,000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/asian_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/asian_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Red Color"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/asian_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/multis_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/multiplescrew" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/multis_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Multi. Screw"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/multis_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/multis_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 2"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/multis_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Metal made "
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/multis_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/screwset_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/screw_set" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/screwset_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Screw set"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/screwset_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16,000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/screwset_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 2"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/screwset_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Metal and plastic "
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/screwset_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    tools:context=".listitem_of_product1">

                    <ImageView
                        android:id="@+id/thiner_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/thineer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/thiner_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thiner"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/thiner_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="18,000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/thiner_quantity_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity 3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/thiner_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="60gm "
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/thiner_add_to_cart_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to Cart"
                            android:src="@drawable/baseline_done_24" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <!-- Your content for the second LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Total price text -->
            <TextView
                android:id="@+id/total_price_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total              72000 TK"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Order confirm button -->
            <Button
                android:id="@+id/order_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Order"
                android:backgroundTint="#2007FF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
